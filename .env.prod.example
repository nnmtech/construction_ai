# Production environment variables (example)
#
# Copy to .env.prod and fill in real values.
# DO NOT commit .env.prod with secrets.

# Public domain for the app (must match DNS)
DOMAIN=example.com

# Used by Traefik Let's Encrypt (ACME)
TRAEFIK_ACME_EMAIL=admin@example.com

# Proxy ports (host): Traefik publishes on these ports.
# In this topology, something in front (nginx/LB/NAT) owns external 80/443 and forwards to these.
PROXY_HTTP_PORT=9080
PROXY_HTTPS_PORT=9443

# External/public ports (what users hit): 80/443.
PROXY_BEHIND_LB=true
EXTERNAL_HTTP_PORT=80
EXTERNAL_HTTPS_PORT=443

# App runtime
ENVIRONMENT=production
DEBUG=false

# Security (required)
# Generate a strong random value for production.
SECRET_KEY=change-me

# Email / SMTP (required if contact/notifications send email)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASSWORD=change-me

# Database (PostgreSQL)
POSTGRES_DB=construction_ai
POSTGRES_USER=construction_ai
POSTGRES_PASSWORD=change-me
DATABASE_URL=postgresql+psycopg://construction_ai:change-me@db:5432/construction_ai

# Run Alembic migrations automatically on startup
# Recommended for production: run migrations as an explicit step instead.
RUN_MIGRATIONS_ON_STARTUP=false
AUTO_CREATE_SCHEMA=false
