# ============================================================================
# Construction AI Landing Page - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# SQLite (Development)
# DATABASE_URL=sqlite:///./contractors.db

# PostgreSQL (Production)
# DATABASE_URL=postgresql://user:password@localhost:5432/construction_ai

# MySQL
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/construction_ai

# Default (SQLite)
DATABASE_URL=sqlite:///./contractors.db

# ============================================================================
# EMAIL CONFIGURATION (SMTP)
# ============================================================================

# Gmail SMTP Settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Alternative: SendGrid
# SMTP_SERVER=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=SG.your-sendgrid-api-key

# Alternative: AWS SES
# SMTP_SERVER=email-smtp.us-east-1.amazonaws.com
# SMTP_PORT=587
# SMTP_USER=your-ses-smtp-username
# SMTP_PASSWORD=your-ses-smtp-password

# Sender Email Address
FROM_EMAIL=noreply@constructionai.com

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Application Name
APP_NAME=Construction AI Landing

# Application Description
APP_DESCRIPTION=AI-powered project management for construction contractors

# Debug Mode (Set to False in production)
DEBUG=True

# Secret Key (Change this to a random string in production)
SECRET_KEY=your-super-secret-key-change-in-production-12345

# Application Host
APP_HOST=0.0.0.0

# Application Port
APP_PORT=8000

# ============================================================================
# ROI CALCULATOR CONFIGURATION
# ============================================================================

# Industry standard cost per day of delay ($)
COST_PER_DAY_DELAY=45662

# Annual cost of AI solution ($)
AI_SOLUTION_ANNUAL_COST=5000

# Expected delay reduction percentage (0.0 - 1.0)
DELAY_REDUCTION_PERCENTAGE=0.65

# Average project duration in days
AVG_PROJECT_DURATION_DAYS=180

# ============================================================================
# BOOKING CONFIGURATION
# ============================================================================

# Demo booking lead time (days before available)
BOOKING_LEAD_TIME_DAYS=1

# Demo slot duration (minutes)
DEMO_SLOT_DURATION_MINUTES=30

# Demo business hours start (24-hour format)
DEMO_START_HOUR=9

# Demo business hours end (24-hour format)
DEMO_END_HOUR=17

# Demo available days (comma-separated, 0=Monday, 4=Friday, 5=Saturday, 6=Sunday)
DEMO_AVAILABLE_DAYS=0,1,2,3,4

# ============================================================================
# CALENDAR INTEGRATION (Optional)
# ============================================================================

# Google Calendar API Key (for calendar integration)
# CALENDAR_API_KEY=your-google-calendar-api-key

# Google Calendar ID (for syncing bookings)
# CALENDAR_ID=your-calendar-id@gmail.com

# Zoom API Key (for generating meeting links)
# ZOOM_API_KEY=your-zoom-api-key

# Zoom API Secret
# ZOOM_API_SECRET=your-zoom-api-secret

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log Format (json or text)
LOG_FORMAT=text

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# CORS Allowed Origins (comma-separated)
# Development defaults (localhost). In production, set this to your exact https origin(s).
# Example: https://example.com,https://www.example.com
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000

# Allowed Hosts (comma-separated)
# Development defaults (localhost). In production, set this to your exact host(s).
# Example: example.com,www.example.com
ALLOWED_HOSTS=localhost,127.0.0.1,*.localhost

# HTTPS Redirect (Set to True in production)
HTTPS_REDIRECT=False

# Trust proxy headers (enable only when behind a trusted reverse proxy)
TRUST_PROXY_HEADERS=False

# Gunicorn-level trust for X-Forwarded-* headers.
#
# IMPORTANT: If you set TRUST_PROXY_HEADERS=true, you should also consider setting
# FORWARDED_ALLOW_IPS to the proxy/load balancer IPs (comma-separated), so Gunicorn
# only trusts forwarded headers from those sources.
#
# Leave unset to default to:
# - TRUST_PROXY_HEADERS=false -> 127.0.0.1 (fail-closed)
# - TRUST_PROXY_HEADERS=true  -> * (trust all; OK behind a trusted proxy network)
#
# Examples:
# FORWARDED_ALLOW_IPS=10.0.0.10,10.0.0.11
FORWARDED_ALLOW_IPS=

# Rate limiting (recommended in production; enabled by default when DEBUG=false)
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Static asset caching (applies to /static/* when DEBUG=false)
STATIC_CACHE_MAX_AGE=86400

# ============================================================================
# EXTERNAL SERVICES (Optional)
# ============================================================================

# SendGrid API Key (alternative to SMTP)
# SENDGRID_API_KEY=your-sendgrid-api-key

# Stripe API Key (for payment processing)
# STRIPE_API_KEY=your-stripe-api-key

# Stripe Webhook Secret
# STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Slack Webhook URL (for notifications)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ============================================================================
# ANALYTICS & TRACKING (Optional)
# ============================================================================

# Google Analytics ID
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Mixpanel Token
# MIXPANEL_TOKEN=your-mixpanel-token

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Workers (for production Gunicorn)
WORKERS=4

# Worker Class (sync, async, gevent)
WORKER_CLASS=uvicorn.workers.UvicornWorker

# ============================================================================
# QUICK START GUIDE
# ============================================================================
#
# 1. Gmail Setup (Recommended for development):
#    a. Enable 2-Factor Authentication on your Gmail account
#    b. Generate an App Password: https://myaccount.google.com/apppasswords
#    c. Copy the 16-character password and paste it below:
#       SMTP_USER=your-email@gmail.com
#       SMTP_PASSWORD=xxxx xxxx xxxx xxxx
#
# 2. PostgreSQL Setup (For production):
#    a. Install PostgreSQL
#    b. Create database: createdb construction_ai
#    c. Update DATABASE_URL:
#       DATABASE_URL=postgresql://user:password@localhost:5432/construction_ai
#
# 3. Generate Secret Key (For production):
#    python -c "import secrets; print(secrets.token_urlsafe(32))"
#
# 4. Test Configuration:
#    python -c "from app.config import settings; print(settings.dict())"
#
# ============================================================================
